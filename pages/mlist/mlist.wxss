/* pages/mlist/mlist.wxss */
.scrollArea {
  flex: 1;
  background-color: #F8F8F8;
  height: 100vh;
  overflow-y: hidden;
}
.searchArea{
  height: 92rpx;
  width: 100%;
  background-color: #fff;
  padding: 24rpx 26rpx;
  box-sizing: border-box;
}
.leftIcon image{
  width: 45rpx;
  height: 45rpx;
}
.rightInput{
  flex: 1;
  font-size: 14px;
  margin-left: 26rpx;
}

.listArea{
  padding: 0 24rpx;
  box-sizing: border-box;
}

.tip .content{
  font-size: 14px;
  color: #999999;
  padding-top: 24rpx;
}

.tip .content .close{
  font-size: 12px;
}