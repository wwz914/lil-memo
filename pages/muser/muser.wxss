/* pages/muser/muser.wxss */
.scrollArea {
  flex: 1;
  background-color: #F8F8F8;
  height: 100vh;
  overflow-y: hidden;
}

.container{
  align-items: end;
}
.infoArea{
  height: 248rpx;
  flex-direction: column;
  align-items: center;
  background-color: #648CEB;
}
.infoArea .avatarArea{
  height: 164rpx;
  width: 164rpx;
  background-color: #F0F0F0;
  text-align: center;
  border-radius: 50%;
  margin-bottom: 16rpx;
}
.infoArea .avatarArea image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}
.infoArea .nameArea{
  font-size: 12px;
  color: #EFF3FD;
}

.item{
  height: 84rpx;
  margin-top: 20rpx;
  padding: 0 40rpx;
  font-size: 14px;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
}
.item::after{
  content: ">";
  color: #CACACA;
}
.item image{
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}