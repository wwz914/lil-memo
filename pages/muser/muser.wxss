/* pages/muser/muser.wxss */
.scrollArea {
  flex: 1;
  background-color: #F8F8F8;
  height: 100vh;
  overflow-y: hidden;
}

.container{
  align-items: end;
}
.infoArea{
  height: 248rpx;
  flex-direction: column;
  align-items: center;
  background-color: #648CEB;
}
.infoArea .avatarArea{
  height: 164rpx;
  width: 164rpx;
  background-color: #F0F0F0;
  text-align: center;
  border-radius: 50%;
  margin-bottom: 16rpx;
}
.infoArea .avatarArea image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}
.infoArea .nameArea{
  font-size: 12px;
  color: #EFF3FD;
}

.item{
  height: 84rpx;
  margin-top: 20rpx;
  padding: 0 40rpx;
  font-size: 14px;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
}
.item::after{
  content: ">";
  color: #CACACA;
}
.item image{
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  margin-bottom: -6rpx;
  margin-right: 8rpx;
}

.dialogMask{
  position: absolute;
  top: 0px;
  left: 0px;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.dialogMask .dialog{
  width: 654rpx;
  height: 416rpx;
  margin: 0 auto;
  border-radius: 10px;
  padding: 64rpx;
  font-size: 12px;
  text-align: center;
  box-sizing: border-box;
  background-color: #fff;
}

.dialogMask .dialog input{
  width: 100%;
  border: 1px solid #EFF0F1;
  height: 72rpx;
  border-radius: 36rpx;
  padding: 0 1em;
  box-sizing: border-box;
  margin-bottom: 32rpx;
  text-align: left;
}

.dialogMask .dialog button{
  width: 224rpx;
  height: 72rpx;
  background-color: #648CEB;
  color: #fff;
  margin-top: 15rpx;
  border-radius: 40rpx;
  box-shadow: 0px 1px 5px 0px #5F82D6;
}