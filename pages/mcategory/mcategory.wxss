/* pages/mcategory/mcategory.wxss */
.scrollArea {
  flex: 1;
  background-color: #F8F8F8;
  height: 100vh;
  overflow-y: hidden;
}
.container{
  align-items: end;
}
.addArea{
  height: 130rpx;
  padding: 38rpx 20rpx;
  box-sizing: border-box;
  font-size: 16px;
  border-bottom: 1px solid #d4d3d3;
}

.addArea .leftInput{
  flex: 1;
  color: #838383;
}
.addArea .leftInput input{
  font-size: 16px;
}
.addArea .rightBtn{
  width: 98rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  border-radius: 5px;
  margin-top: -2px;
  background-color: #5E8CEE;
}

.edit{
  color: #929292;
  font-size: 10px;
  border-radius: 4px;
  margin: 24rpx 16rpx;
}