/* pages/mcategory/mcategory.wxss */
.scrollArea {
  flex: 1;
  background-color: #F8F8F8;
  height: 100vh;
  overflow-y: hidden;
}
.container{
  align-items: end;
}
.addArea{
  height: 130rpx;
  padding: 38rpx 20rpx;
  box-sizing: border-box;
  font-size: 16px;
  border-bottom: 1px solid #d4d3d3;
}

.addArea .leftInput{
  flex: 1;
  color: #838383;
}
.addArea .leftInput input{
  font-size: 16px;
}
.addArea .rightBtn{
  width: 98rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  border-radius: 5px;
  margin-top: -2px;
  background-color: #5E8CEE;
}

.edit{
  color: #929292;
  font-size: 10px;
  border-radius: 4px;
  margin: 24rpx 16rpx;
}

.cate .cate-left image{
  width: 40rpx;
  height: 40rpx;
}

.file-icon{
  margin-right: 22rpx;
}
.cate-class{
  border-bottom: 1px solid #F0F0F0;
}
.cate-popup>view{
  border-radius: 10rpx;
  height:fit-content;
  background-color: #F7F7F7;
}
.pop-ops{
  margin-bottom: 16rpx;
}
.pop-op{
  height: 106rpx;
  line-height: 106rpx;
  text-align: center;
  background-color: #fff;
  border-bottom: 1px solid #E5E5E5;
}
.pop-op:hover{
  background-color: #E5E5E5;
}
.dialogMask{
  position: absolute;
  top: 0px;
  left: 0px;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.dialogMask .dialog{
  width: 654rpx;
  height: 334rpx;
  margin: 0 auto;
  border-radius: 10px;
  padding: 64rpx;
  font-size: 12px;
  text-align: center;
  box-sizing: border-box;
  background-color: #fff;
}

.dialogMask .dialog input{
  width: 100%;
  border: 1px solid #EFF0F1;
  height: 72rpx;
  border-radius: 36rpx;
  padding: 0 1em;
  box-sizing: border-box;
  margin-bottom: 32rpx;
  text-align: left;
}

.dialogMask .dialog button{
  width: 224rpx;
  height: 72rpx;
  background-color: #648CEB;
  color: #fff;
  margin-top: 15rpx;
  border-radius: 40rpx;
  box-shadow: 0px 1px 5px 0px #5F82D6;
}